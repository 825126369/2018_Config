#自动产生依赖，方法一
CC :=g++
#LD :=g++
CFLAGS :=-c
SOURCES := $(wildcard *.cpp)
aaa:
	@echo $(SOURCES)
sss:aaa.o bbb.o
	${CC}  $^  -o $@

include $(subst .cpp,.d,$(SOURCES))
%.d:%.cpp
#	$(CC) -MM $(CFLAGS) $<  >$@.$$$$;\
#	sed 's,\($*\)\.o[ :]*,\1.o $@ : ,g' <$@.$$$$>$@;\
#	rm -rf $@.$$$$;
	$(CC) -MM -MT "$< $@" $(CFLAGS) $< >$@
